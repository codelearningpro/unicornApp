<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/infoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infoGoalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal: "
                android:textSize="9dp"/>

            <TextView
                android:id="@+id/infoGoalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Year Tuition"
                android:textSize="9dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/infoTargetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Date: "
                android:textSize="9dp"/>

            <TextView
                android:id="@+id/infoTargetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug. 22 2016"
                android:textSize="9dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infoWithdrawText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Early Withdraw Penalty: "
                android:textSize="9dp"/>

            <TextView
                android:id="@+id/infoWithdrawAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50"
                android:textSize="9dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/infoStatusBar"
        android:layout_below="@+id/infoInfo"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="20dp">

        <savewithsprout.mchart.GoalStatus
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/infoMoreInfo"
        android:layout_below="@id/infoStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/infoLastDepositText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="Last Deposit"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/infoLastDepositAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="$24"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/infoLastDepositSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/infoLastDepositAmount"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="manual deposit | Oct 24th @ 11:32am"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/infoNextDepositText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="Next Scheduled Deposit"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/infoNextDepositAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="$55"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/infoNextDepositSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/infoNextDepositAmount"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="Oct 25th @ 1:00pm"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/infoWeeksRemainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="Weeks Remaining"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/infoWeeksRemainingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="42"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/infoWeeksRemainingSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/infoWeeksRemainingAmount"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="until Aug 22 2016"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/infoToReachGoalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="To Reach Goal"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/infoToReachGoalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="$31"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/infoToReachGoalSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/infoToReachGoalAmount"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="Deposit /week"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/infoYourPaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="Your Pace"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/infoYourPaceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="$43"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/infoYourPaceSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/infoYourPaceAmount"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="avg. /week"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>